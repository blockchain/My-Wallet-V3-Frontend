div
  span(ng-bind-html="determineLabel(origin) | escapeHtml | highlight:highlight")
  span(ng-hide="isNaN(origin.balance)")
    span &ensp;(
    span(ng-switch="isBitCurrency(settings.displayCurrency)")
      fiat(ng-switch-when="false" btc="determineAvailableBalance(origin.balance)")
      span(ng-switch-when="true") {{ determineAvailableBalance(origin.balance) | toBitCurrency:settings.btcCurrency }}
    span )
