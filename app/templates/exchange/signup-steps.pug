.flex-row.height-100.pt-70.pb-40.pl-40.pr-40
  .flex-row.flex-column-tablet.center-mobile.width-100-tablet.width-100.width-100-mobile
    .width-40.hidden-xs
      .width-80.flex-column
        span.f-20.em-500(translate="Complete the following steps to start trading bitcoin!")
        span.mid-grey.f-16.em-300.mt-10(translate="You will only have to do this once.")

    .width-60.flex-row.flex-between-mobile.center(ng-class="inMobileBuy ? 'flex-column-mobile' : 'flex-baseline'")
      .width-20.width-20-tablet(ng-repeat-start="step in vm.displaySteps track by $index")
        .flex-column.flex-center.hidden-xs(ng-class="{primary: vm.onOrAfterStep(step)}" ng-click="qaDebugger && vm.goTo(step)")
          span.f-14.white(ng-if="!vm.afterStep(step)") {{ $index + 1 }}
          span.f-14.white(ng-if="vm.afterStep(step)")
            i.ti-check
          span.mt-5.nowrap(ng-class="{primary: vm.onOrAfterStep(step)}" translate="{{ vm.provider + '.' + step }}")
      .width-20.width-20-tablet.border-top.flex-justify.hidden-xs(ng-repeat-end ng-hide="$last")
  .close-modal
    i.ti-close.pointer(ng-click="vm.onStep('pending') ? $dismiss() : vm.close()")
