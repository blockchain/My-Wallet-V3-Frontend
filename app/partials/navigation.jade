.bc-header(role='navigation')
  .container-fluid
    .navbar-header.flex-between.flex-center
      .flex-center
        button.navbar-toggle.mvn(type="button", ng-init="navCollapsed = true", ng-click="navCollapsed = !navCollapsed")
          span.sr-only Toggle navigation
          span.ti-angle-down.white
        a.navbar-brand(ui-sref="wallet.common.home") 
          img#logo(src="img/blockchain-wallet-logo.svg", alt="Blockchain")
      a#wallet-nav-toggle(title="Wallet Navigation Menu", ng-click="toggleMenu()")
        span.ti-menu.white
    .navbar-collapse.collapse(ng-class="{'in bg-blue' : !navCollapsed}", ng-click="navCollapsed=true")
      ul.nav.navbar-nav.navbar-right(ng-show="status.isLoggedIn")
        li.item(ng-show="settings.btcCurrency")
          a.flex-important.flex-column(ng-click="openBCmarkets()" href="")
            span
              | 1 {{ settings.btcCurrency.code }} =&nbsp;
              fiat(btc="settings.btcCurrency.conversion")
        li.dropdown.item.hidden-xs(uib-dropdown)
          a.uib-dropdown-toggle(href="#" data-toggle="uib-dropdown" role="button" aria-expanded="false" uib-dropdown-toggle)
            span(translate="EXPLORE")
            i.ti-angle-down.mlm
          ul.uib-dropdown-menu.dropdown-menu(role='menu')
            li
              a(href="{{rootURL}}", translate="HOME" target="_blank")
            li
              a(href="{{rootURL}}charts", translate="CHARTS" target="_blank")
            li
              a(href="{{rootURL}}stats", translate="STATS" target="_blank")
            li
              a(href="https://markets.blockchain.info/", translate="MARKETS" target="_blank")
            li
              a(href="{{rootURL}}api", translate="API" target="_blank")
        li.item.visible-xs
          a(href="{{rootURL}}", translate="HOME" target="_blank")
        li.item.visible-xs
          a(href="{{rootURL}}charts", translate="CHARTS" target="_blank")
        li.item.visible-xs
          a(href="{{rootURL}}stats", translate="STATS" target="_blank")
        li.item.visible-xs
          a(href="{{rootURL}}api", translate="API" target="_blank")
        li.item.visible-xs
          a(href="https://markets.blockchain.info/", translate="MARKETS" target="_blank")
        li.item
          a(ng-click="refresh()" ng-class="{'rotating': refreshing}" href="").refresh
            img(src="img/refresh.svg" alt="Refresh Button")
        li.item
          a(ng-click="logout()", translate="SIGNOUT" href="")
    // /.nav-collapse
