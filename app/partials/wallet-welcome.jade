    h4(translate="Loved by Users. Praised by Geeks. Recognized by the Press.")
    uib-slide(index="0")
      div
        img(src="img/logo-nytimes.svg")
        p(translate="QUOTE_0")
        span.author
          a(href="http://nyti.ms/1sfHj9b" target="_blank") The New York Times            
    uib-slide(index="1")
      div
        p(translate="QUOTE_1")
        span.author(translate="WALLET_USER")
    uib-slide(index="2")
      div
        img(src="img/logo-wsj.svg")
        p(translate="QUOTE_2")
        span.author
