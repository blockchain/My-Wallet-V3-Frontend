.payment-methods
  span.type-h5.em-500.flex-start.pts(translate="SELECT_PAYMENT_METHOD")
  .flex-row.flex-center.pointer.mtml
    input.man(type="radio" name="inMedium" id="card" ng-model="$parent.method" value="card" ng-disabled="status.waiting")
    .flex-column.flex-1.mlm.pointer
      label.mts.pointer.em-400(for="card")
        .flex-row.flex-center
          span
            img.mrm(src="img/credit-card.png")
            img.mrm.checked(src="img/credit-card-blue.png")
          .flex-column
            span.type-h5.em-400(translate="CARD")
            span.flex-row
              span.em-400(translate="CARD_TRANSFER.TITLE")
              helper-button(content="CARD_TRANSFER.COPY")
  .mlm.mbl.em-300.width-70(ng-show="method === 'card' && !userHasExchangeAcct")
    span(translate="VERIFY_CARD_NOTE")
  .flex-row.flex-center.pointer
    input.man(type="radio" name="inMedium" id="bank" ng-model="$parent.method" value="bank" ng-disabled="status.waiting")
    .flex-column.flex-1.mlm.pointer
      label.mts.pointer.em-400(for="bank")
        .flex-row.flex-center
          span
            img.mrm(src="img/bank.png")
            img.mrm.checked(src="img/bank-blue.png")
          .flex-column
            span.type-h5.em-400(translate="BANK")
            span.flex-row
              span.em-400(translate="BANK_TRANSFER.TITLE")
              helper-button(content="BANK_TRANSFER.COPY")
  .mlm.mbl.em-300.width-70(ng-hide="exchange.profile.level.name >= 2 || method !== 'bank'")
    span(translate="VERIFY_ID_NOTE")
