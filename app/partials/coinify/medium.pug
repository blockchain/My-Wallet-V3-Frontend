form.modal-body.fade.clearfix(name="paymentMethodForm" id="paymentMethodForm" role="form" ng-submit="submit()" novalidate)
  .payment-methods
    span.type-h5.em-500.flex-start.pts(translate="SELECT_PAYMENT_MEDIUM")
    .flex-row.flex-center.pointer.mtml
      input.man(type="radio" name="inMedium" id="card" ng-model="vm.medium" value="card" ng-disabled="status.waiting" required)
      .flex-row.flex-align-end.flex-1.mlm.pointer
        label.mts.pointer.em-300(for="card")
          .flex-row.flex-center
            span
              img.mrm(src="img/credit-card.png")
              img.mrm.checked(src="img/credit-card-blue.png")
            div
              span.type-h5.em-300(translate="CARD")
              img.mbs.mll.cc-shadow(src="img/visa-logo.png")
              img.mbs.mlm.cc-shadow(src="img/mastercard-logo.png")
              span.flex-row
                span.em-300(translate="CARD_TRANSFER.TITLE")
        helper-button.mb-5(content="CARD_TRANSFER.COPY")
    .mlm.mbl.em-300.width-70(ng-show="showNote('card')")
      span(translate="VERIFY_CARD_NOTE")
    .flex-row.flex-center.pointer(ng-hide="inMobileBuy")
      input.man(type="radio" name="inMedium" id="bank" ng-model="vm.medium" value="bank" ng-disabled="status.waiting")
      .flex-row.flex-align-end.flex-1.mlm.pointer
        label.mts.pointer.em-300(for="bank")
          .flex-row.flex-center
            span
              img.mrm(src="img/bank.png")
              img.mrm.checked(src="img/bank-blue.png")
            .flex-column
              span.type-h5.em-300(translate="BANK")
              span.flex-row
                span.em-300(translate="BANK_TRANSFER.TITLE")
        helper-button.mb-5(content="BANK_TRANSFER.COPY")
    .mlm.mbl.em-300.width-70(ng-show="showNote('bank')")
      span(translate="VERIFY_ID_NOTE")
.modal-footer.flex-end.flex-row
  button.button-primary(type="submit" form="paymentMethodForm" ng-disabled="!mediums || locked || paymentMethodForm.$invalid" translate="CONTINUE")
